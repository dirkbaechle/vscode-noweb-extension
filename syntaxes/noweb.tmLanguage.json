{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "noweb",
	"patterns": [
		{
			"include": "#chunkcode"
		},
		{
			"include": "text.tex.latex"
		}

	],
	"repository": {
		"chunkcode": {
			"patterns": [{
				"name": "source.noweb",
				"begin" : "^<<.*>>=\\s*$",
				"end" : "(^@$|^@\\s+)"
			 }]
		}
	},
	"scopeName": "text.tex.latex.noweb"
}