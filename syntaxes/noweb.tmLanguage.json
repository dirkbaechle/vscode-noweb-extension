{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "noweb",
	"patterns": [
		{
			"include": "#chunk"
		},
		{
			"include": "#definition"
		},
		{
			"include": "#reference"
		},
		{
			"include": "text.tex.latex"
		}

	],
	"repository": {
		"definition": {
			"patterns": [{
				"name": "variable.language.noweb",
				"match": "^<<.*>>=\\s*$"
			}]
		},
		"reference": {
			"patterns": [{
				"name": "keyword.noweb",
				"match": "^\\s*<<.*>>\\s*$"
			}]
		},
		"chunk": {
			"patterns": [{
				"name": "string.noweb",
				"match": "^@\\s*$"
			}]
		}
	},
	"scopeName": "text.tex.latex.noweb"
}